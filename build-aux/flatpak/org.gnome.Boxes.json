            "build-options" : {
                "env" : {
                    "PYTHONPATH" : "/app"
                }
            },
            "config-opts" : [
                "-Dvapi=enabled",
                "-Dwebdav=enabled",
                "-Dgtk_doc=disabled"
            ],
            "sources" : [
