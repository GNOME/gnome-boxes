            "name" : "spice-gtk",
            "buildsystem": "meson",
            "build-options" : {
                "env" : {
                    "PYTHONPATH" : "/app"
                }
            },
            "config-opts" : [
                "-Dvapi=enabled",
                "-Dwebdav=enabled",
                "-Dgtk_doc=disabled"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://www.spice-space.org/download/gtk/spice-gtk-0.38.tar.xz",
                    "sha256" : "5ae974731baf2b41316d4f0b3ae0c2e47f00bff91a5a617e189cd3dedcd96d8e"
