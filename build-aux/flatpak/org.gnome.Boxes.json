        {
            "name" : "gnome-boxes",
            "buildsystem" : "meson",
            "config-opts" : [
                "-Dflatpak=true",
                "-Dprofile=development",
                "-Ddistributor_name=gnome-boxes-nightly",
                "-Ddistributor_version=master"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/gnome/gnome-boxes.git"
                }
            ]
