                }
            ]
        },
        {
            "name" : "spice",
            "buildsystem" : "meson",
            "config-opts" : [
                "-Dlz4=false",
                "-Dmanual=false"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://spice-space.org/download/releases/spice-0.14.3.tar.bz2",
                    "sha256" : "551d4be4a07667cf0543f3c895beb6da8a93ef5a9829f2ae47817be5e616a114"
                }
            ]
        },
